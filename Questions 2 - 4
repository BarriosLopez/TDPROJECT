Algoritmo  PROJECT_1
	Escribir   "Welcome"
	Escribir "What´s your name?"
	Leer  nombre
	Escribir "Hello  " nombre
	Escribir "For the quiz please write only the number of the answer you´re choosing."
	Precio =  0
	tiempo =  0
  loop = 0
	Escribir  "Are you an introverted person or an extroverted person?"
	Escribir "1.-Introverted  2.- Extroverted"
	Leer  respuesta
	Segun  respuesta Hacer
		1 :
			Precio  =  precio  + 1
			Escribir " 2.1 What things do you like to do when alone?"
			Escribir "1.-Watch a movie"
			Escribir  "2.-Read a book"
            Escribir "3.- a nap "
			Leer  respuesta_1
			Segun   respuesta_1 Hacer
				1 :
					Precio  =  Precio  + 0
				2 :
					Precio  =  Precio  + 1
				3 :
					Precio  =  Precio  + 2
				De  Otro Modo:
					Escribir  "Invalid answer, please only write the number of the question"
			Finsegún
		2 :
			Precio  =  Precio  + 2
			Escribir "2.2 What kinds of things do you enjoy doing with other people?"
			
			Escribir "1.-Going to the cinema"
			Escribir "2.-Go to a place to dance"
			Escribir"3.-Have a cup of coffee" 
			Leer  respuesta_1_2 
			Segun  respuesta_1_2 Hacer
				1 :
					Precio = precio  +  2
				2 :
					precio  =  precio  + 1
				3 :
					precio =  precio + 0
				De  Otro Modo:
					escribir "Invalid answer, please only write the number of the question"
			FinSegun
		De  Otro Modo: 
			escribir "Invalid answer, please only write the number of the question"
	FinSegún
	
	Repetir 
	Escribir "At what time of the day are you more active?"
	Escribir "1.-Morning"
	Escribir "2.-Noon"
	Escribir "3.-Evening "
	Leer  respuesta_2
	Segun  respuesta_2 Hacer
		1 :
			Tiempo  =  Tiempo  + 1
			loop = 1
		2 :
			Tiempo  =  Tiempo  - 1
			loop = 2
		3 :
			Tiempo  =  Tiempo  + 1
			loop =3
		De  Otro Modo: loop = 0
			Escribir "Invalid answer, please only write the number of the question"
	fin  segun
Hasta que loop <> 0
loop = 0
	
	Repetir 
